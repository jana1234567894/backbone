# ============================================
# PolyGlotMeet Backend - Environment Variables
# ============================================
# Copy this file to .env for local development
# For Railway: Set these in the Railway dashboard

# ============================================
# LiveKit Configuration (Required)
# ============================================
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# ============================================
# Supabase Configuration (Required)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# ============================================
# Deepgram Speech-to-Text (Required for Transcription)
# ============================================
DEEPGRAM_API_KEY=your-deepgram-api-key

# ============================================
# Translation Service Configuration
# ============================================
# Which translation service to use: 'libretranslate', 'google', or 'deepl'
TRANSLATION_SERVICE=libretranslate

# LibreTranslate (FREE)
LIBRETRANSLATE_URL=https://libretranslate.de

# Google Translate (Optional - Paid)
# GOOGLE_TRANSLATE_API_KEY=your-google-translate-key

# DeepL (Optional - Paid)
# DEEPL_API_KEY=your-deepl-api-key

# ============================================
# Feature Flags
# ============================================
# Enable/disable transcription feature
ENABLE_TRANSCRIPTION=false

# Enable/disable translation feature
ENABLE_TRANSLATION=false

# Enable translation caching (reduces API costs)
CACHE_TRANSLATIONS=true

# ============================================
# Server Configuration
# ============================================
# Port (Railway sets this automatically)
PORT=8080

# Environment: development, production
NODE_ENV=development

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# ============================================
# Optional Performance Tuning
# ============================================
# Translation cache TTL (seconds)
# TRANSLATION_CACHE_TTL=3600

# Max translations to cache
# MAX_CACHE_SIZE=1000

# Deepgram model: nova-2, enhanced, base
# DEEPGRAM_MODEL=nova-2

# Enable speaker diarization
# DEEPGRAM_DIARIZE=false
